@model List<CheeseMVCPersistent.Models.Menu>

<h1>My Menus</h1>



@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}
<p><a asp-controller="Menu" asp-action="Add"><button type="button">Add Menu</button></a></p>

<table class="table">    
    @foreach (var menu in Model)
    {
        <tr>   
            <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></td>    
        </tr>
    }
</table>