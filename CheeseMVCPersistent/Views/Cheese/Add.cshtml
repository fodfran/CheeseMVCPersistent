@model CheeseMVCPersistent.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

    @*<div style="color: red" asp-validation-summary="All"></div>*@

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>

        @*<p>@ViewBag.error</p>*@
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select class="form-control" asp-for="CategoryID" asp-items="Model.Categories"></select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating"/>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    
    
    <input type="submit" value="Add Cheese" />
</form>

