
@model IList<CheeseMVCPersistent.Models.Cheese>

<h1>@ViewBag.Title</h1>


<p><a asp-controller="Cheese" asp-action="Add"><button type="button">Add Cheese</button></a></p>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

else {
<form asp-controller="Cheese" asp-action="Remove" method="post">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Rating</th>
        </tr>

    
    @foreach (var cheese in Model)
    {
        <tr>
            <td><input type="checkbox" name="cheeses" value="@cheese.ID"/>&nbsp @cheese.Name &nbsp
            <a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">edit</a></td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td>@cheese.Rating</td>
            
        </tr>
    }
    </table>
    <input type="submit" value="Remove Cheese" />
    
</form>
}
